@using Rent_A_Car_PR_7_2016.Models
@model IEnumerable<Korisnik>
@{
                /**/

                ViewBag.Title = "Kupci";
}
<body background="~/pozadina.jpg">
    <div style="text-align:center">
        <h2 style="background-color:aliceblue">Korisnici sistema</h2>
    </div>
    <h3 style="background-color:aliceblue">Pretraga</h3>
    <div>
        <table class="table-striped">
            <tr>
                <th colspan="10">Unesite ime korisnika:</th>
                <th colspan="10">Unesite prezime korisnika:</th>
                <th colspan="10">Unesite korisničko ime korisnika:</th>
            </tr>
            <tr>
                <td colspan="10">
                    <form action="~/Registracija/SearchByIme">
                        <input list="ime" name="ime" />
                        <input type="submit" class="btn btn-info" value="Pretraga" />
                    </form>
                </td>
                <td colspan="10">
                    <form action="~/Registracija/SearchByPrezime">
                        <input list="prezime" name="prezime" />
                        <input type="submit" class="btn btn-info" value="Pretraga" />
                    </form>
                </td>
                <td colspan="10">
                    <form action="~/Registracija/SearchByKorisnickoIme">
                        <input list="korisnickoime" name="korisnickoime" />
                        <input type="submit" class="btn btn-info" value="Pretraga" />
                    </form>
                </td>
            </tr>
        </table>
    </div>
    <br />
    <h3 style="background-color:aliceblue">Filtriranje</h3>
    <form action="~/Registracija/Filtriranje" method="post">
        <label>Uloga:</label>
        <select name="uloga">
            <option value=""></option>
            <option value="ADMINISTRATOR">ADMINISTRATOR</option>
            <option value="VLASNIK">VLASNIK VOZILA</option>
            <option value="KUPAC">KUPAC</option>
        </select>
        &nbsp;&nbsp;
        <input type="submit" class="btn btn-info" value="Filtriraj" />
    </form>
    <br />

    <br />
    <br />
    <table class="table table-striped">
        <tr>
            <th colspan="2"> Korisnicko ime</th>
            <th colspan="2"> Ime</th>
            <th colspan="2"> Prezime</th>
            <th colspan="2"> Pol: </th>
            <th colspan="2"> Datum rođenja: </th>
            <th colspan="2"> Uloga: </th>
            <th colspan="2"></th>
        </tr>
        @foreach (Korisnik item in Model)
        {
            if (item.Obrisano == false)
            {
                <tbody>
                    <tr>
                        <td colspan="2"> @item.KorisnickoIme </td>
                        <td colspan="2"> @item.Ime </td>
                        <td colspan="2"> @item.Prezime </td>
                        <td colspan="2"> @item.Pol </td>
                        <td colspan="2"> @item.DatumRodjenja </td>
                        <td colspan="2"> @item.Uloga </td>
                        <td colspan="2">
                            <form action="~/Registracija/ObrisiKorisnika" method="post">
                                <input type="text" name="korisnickoIme" value="@item.KorisnickoIme" hidden />
                                <input type="submit" class="btn btn-info" value="Izbrisi" />
                            </form>
                        </td>
                    </tr>
                </tbody>
            }
        }
    </table>
    <h3 style="background-color:aliceblue">Registruj prodavca</h3>
    <form action="~/Registracija/RegisterVlasnika" method="post">
        <input type="submit" class="btn btn-info" value="Registruj" />
    </form>
</body>


